<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Synopsis\Bundle\SubjectBundle\Entity\Subject" table="subjects">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" length="255" column="name" />
        <field name="description" type="text" column="description" nullable="true" />
        <field name="createdAt" type="datetime" column="created_at" />
        <field name="updatedAt" type="datetime" column="updated_at" />

        <!-- Subject's Type -->
        <many-to-one target-entity="Synopsis\Bundle\SubjectBundle\Entity\SubjectType" field="type">
            <cascade>
                <cascade-all />
            </cascade>
        </many-to-one>
    </entity>
</doctrine-mapping>
