<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Synopsis\Bundle\SubjectBundle\Entity\Subject" table="subjects">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="uuid" type="string" length="36" column="uuid" />
        <field name="name" type="string" length="255" column="name" />
        <field name="description" type="text" column="description" nullable="true" />
        <field name="createdAt" type="datetime" column="created_at" />
        <field name="updatedAt" type="datetime" column="updated_at" />

        <!-- Subject Events -->
        <one-to-many target-entity="Synopsis\Bundle\EventBundle\Entity\Event" mapped-by="subject" field="events">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <!-- Subject Type -->
        <many-to-one target-entity="Synopsis\Bundle\SubjectBundle\Entity\SubjectType" field="type">
            <cascade>
                <cascade-all />
            </cascade>
        </many-to-one>

        <!-- Subject User -->
        <many-to-one target-entity="Synopsis\Bundle\UserBundle\Entity\User" field="user">
            <cascade>
                <cascade-all />
            </cascade>
        </many-to-one>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist" />
            <lifecycle-callback type="preUpdate" method="preUpdate" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
