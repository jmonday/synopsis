{% extends "::base.html.twig" %}

{% block title %}SynopsisEventBundle:Event:index{% endblock %}

{% block body %}
    <p>Event Index</p>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Subject</th>
                <th>Subject Type</th>
                <th>Actions</th>
                <th>Event Attributes</th>
                <th>Date</th>
            </tr>
        </thead>

        <tbody>
            {% for event in events %}
                <td>{{ event.id }}</td>
                <td>{{ event.subject.name }}</td>
                <td>{{ event.subject.type.namespace }}</td>
                <td>
                    <ul>
                        {% for action in event.subject.type.actions %}
                            <li>
                                {{ action.name }}<br />
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        {% for value in event.attributeValues %}
                            <li>
                                {{ value.attribute }}:
                                {{ value.value }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{{ event.createdAt | date('Y-m-d H:i:s') }}</td>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
