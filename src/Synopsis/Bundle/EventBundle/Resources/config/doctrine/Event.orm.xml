<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Synopsis\Bundle\EventBundle\Entity\Event" table="events">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="createdAt" type="datetime" column="created_at" />
        <field name="updatedAt" type="datetime" column="updated_at" />

        <!-- Event Subject -->
        <many-to-one target-entity="Synopsis\Bundle\SubjectBundle\Entity\Subject" field="subject" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-all />
            </cascade>
        </many-to-one>

        <!-- Event has many AttributeValues -->
        <one-to-many target-entity="Synopsis\Bundle\AttributeBundle\Entity\Value" mapped-by="event" field="attributeValues">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
        <!--
        <many-to-many target-entity="Synopsis\Bundle\AttributeBundle\Entity\Value" field="attributeValues" fetch="EXTRA_LAZY">
            <join-table name="event_attribute_values">
                <join-columns>
                    <join-column name="event_id" referenced-column-name="id" nullable="false" unique="false" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="value_id" referenced-column-name="id" nullable="false" unique="false" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        -->
    </entity>
</doctrine-mapping>
